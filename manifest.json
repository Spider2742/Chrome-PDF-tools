{
  "manifest_version": 3,
  "name": "PDF Tools",
  "version": "1.0",
  "description": "Adds circular floating buttons. Click extension icon to adjust position.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*.pdf", "file:///*.pdf"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab", "storage"]
}